{
  "name": "remote-claude",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "wrapper": "bun run src/wrapper/index.ts",
    "concentrator": "bun run src/concentrator/index.ts",
    "build": "bun build src/wrapper/index.ts --outfile bin/rclaude --target bun && bun build src/concentrator/index.ts --outfile bin/concentrator --target bun",
    "typecheck": "tsc --noEmit"
  },
  "bin": {
    "rclaude": "./bin/rclaude",
    "concentrator": "./bin/concentrator"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
