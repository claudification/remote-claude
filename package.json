{
  "name": "remote-claude",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev:wrapper": "bun run src/wrapper/index.ts",
    "dev:concentrator": "bun run src/concentrator/index.ts",
    "dev:web": "cd web && bun run dev",
    "build": "bun run build:web && bun run build:wrapper && bun run build:concentrator",
    "build:web": "cd web && bun run build",
    "build:wrapper": "bun build src/wrapper/index.ts --compile --minify --outfile bin/rclaude",
    "build:concentrator": "bun run scripts/build-concentrator.ts",
    "typecheck": "tsc --noEmit && cd web && bun run typecheck"
  },
  "bin": {
    "rclaude": "./bin/rclaude",
    "concentrator": "./bin/concentrator"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
